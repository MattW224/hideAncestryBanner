{
    "manifest_version": 2,
    "name": "Hide Ancestry banners",
    "description": "Remove the Ancestry maintenance and private policy banners.",
    "icons": {
        "16": "img/icon16.png",
        "48": "img/icon48.png",
        "128": "img/icon128.png"
    },
    "content_scripts": [
        {
            "matches": [
                "https://*.ancestry.com.au/*",
                "https://*.ancestry.ca/*",
                "https://*.ancestry.com/*",
                "https://*.ancestry.de/*",
                "https://*.ancestry.fr/*",
                "https://*.ancestry.ie/*",
                "https://*.ancestry.it/*",
                "https://*.ancestry.mx/*",
                "https://*.ancestry.no/*",
                "https://*.ancestry.pl/*",
                "https://*.ancestry.se/*",
                "https://*.ancestry.co.uk/*"
            ],
            "js": ["content.js"]
        }
    ],
    "version": "0.11"
}